<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="custom_user_menu_remove_items" inherit_id="web.UserMenu" name="Remove User Menu Items">
        <!-- Eliminar DocumentaciÃ³n -->
        <xpath expr="//t[@t-if='widget.showDocumentation']" position="replace"/>
        <!-- Eliminar Soporte -->
        <xpath expr="//t[@t-if='widget.showSupport']" position="replace"/>
        <!-- Eliminar Atajos -->
        <xpath expr="//t[@t-if='widget.showShortcut']" position="replace"/>
        <!-- Eliminar Mi cuenta de Odoo -->
        <xpath expr="//a[contains(@href, 'odoo.com')]" position="replace"/>
    </template>
</odoo>
